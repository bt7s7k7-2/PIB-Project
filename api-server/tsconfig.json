{
    "compilerOptions": {
        "incremental": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "lib": [
            "ESNext"
        ],
        "outDir": "dist-types",
        "declaration": true,
        "emitDeclarationOnly": true,
        "preserveSymlinks": true,
        "useDefineForClassFields": false,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "rootDir": "src",
        "skipLibCheck": true,
        "noImplicitOverride": true
    },
    "include": [
        "src",
        "test"
    ]
}
